{
  "roots": ["<rootDir>/__test__"],
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/index.ts",
    "!<rootDir>/src/main/**",
    "!<rootDir>/src/domain/**"
  ],
  "coverageDirectory": "coverage",
  "setupFilesAfterEnv": ["<rootDir>/__test__/config/typeorm-setup.ts"],
  "testEnvironment": "node",
  "transform": {
    ".+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/test/(.*)": "<rootDir>/__test__/$1",
    "@/(.*)": "<rootDir>/src/$1"
  }
}
