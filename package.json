{
  "name": "authentication-service",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/leonfoliveira/Authentication-Service.git",
  "author": "Leonardo Oliveira <leonfoliveira@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "node build/main/server.js",
    "dev": "tsnd ./src/main/server.ts --respawn --watch=src --transpile-only --inspect",
    "build": "rimraf build && tsc -p tsconfig.build.json",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "yarn test --testMatch '**/*.spec.ts'",
    "test:integration": "yarn test --testMatch '**/*.test.ts'",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "update": "yarn-check -u -s"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.6.0",
    "pg": "^8.6.0",
    "typeorm": "^0.2.32",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.4",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.14",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4",
    "yarn-check": "^0.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --fix",
      "yarn test:staged"
    ]
  }
}
