{
  "name": "authentication-service",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/leonfoliveira/Authentication-Service.git",
  "author": "Leonardo Oliveira <leonfoliveira@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "node build/main/server.js",
    "dev": "tsnd ./src/main/server.ts --respawn --watch=src --transpile-only --inspect",
    "build": "rimraf build && tsc -p tsconfig.build.json",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "yarn test --testMatch '**/*.spec.ts'",
    "test:integration": "yarn test --testMatch '**/*.test.ts'",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "update": "yarn-check -u -s"
  },
  "devDependencies": {
    "@types/faker": "^5.5.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.14",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4",
    "yarn-check": "^0.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --fix",
      "yarn test:staged"
    ]
  }
}
